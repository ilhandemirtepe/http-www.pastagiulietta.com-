@model   PastaMVC.Models.Kategori


@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}


@*@class = "form-horizontal", role = "form",*@
@using (Html.BeginForm("Create", "KategoriCRUD", FormMethod.Post, new { enctype = "multipart/form-data", @class = "form-horizontal"}))
{

    <div class="form-group">
        <label class="col-md-3 control-label">Kategori Adı</label>
        <div class="col-md-3">
            @Html.EditorFor(model => model.KategoriName, new { htmlAttributes = new { @class = "form-control", required = "" } })
                
        </div>
    </div>
    <div class="form-group">
        <label class="col-md-3 control-label">Resim Ekle</label>
        <div class="col-md-3">
            <input type="file" required="" name="file" />

        </div>
    </div>
    <div class="form-group">
        <label class="col-md-3 control-label"></label>
        <div class="col-md-3">
            <input type="submit" name="name" class="btn btn-success" value="Ekle " />
        </div>
    </div>




}