@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

@model PastaMVC.Models.Admin



<div class="container">
    <div class="row">
        <div class="col-md-6">

            @using (Html.BeginForm())
            {


                <div class="form-group">
                    <div class="col-md-5">
                        Admin Adı
                    </div>
                    <div class="col-md-5">
                        @Html.TextBoxFor(a => a.AdminName, new { @class = "form-control" ,required="" })
                    </div>
                </div>
                <br />
                <div class="form-group">
                    <div class="col-md-5">
                        Kullanıcı Adı
                    </div>
                    <div class="col-md-5">
                        @Html.TextBoxFor(a => a.AdminUserName, new { @class = "form-control", required = "" })
                    </div>
                </div>
                <br />
                <div class="form-group">
                    <div class="col-md-5">
                        Şifre
                    </div>
                    <div class="col-md-5">
                        @Html.TextBoxFor(a => a.AdminPassWord, new { @class = "form-control", required = "" })
                    </div>
                </div>
                <br />

                <div class="form-group">
                    <div class="col-md-5">

                    </div>
                    <div class="col-md-5" style="text-align:right">

                        <input class="btn btn-success btn-md" type="submit" value="Ekle" />
                    </div>
                </div>

            }
        </div>
    </div>


</div>

