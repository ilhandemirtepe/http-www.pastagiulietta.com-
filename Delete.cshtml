@model PastaMVC.Models.Product

@{
    ViewBag.Title = "Delete";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}


@using (Html.BeginForm("Delete", "UrunCRUD", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    <div class="form-group">
        <label class="col-md-2 control-label"></label>
        <div class="alert alert-warning fade in col-md-3">
            <a href="#" class="close" data-dismiss="alert">×</a>
            <strong>Uyarı..!</strong> Silmek istediğinizden eminmisiniz  ....!
        </div>

    </div>

    <div class="form-group">
        <label class="col-md-3 control-label">Ürün Adı</label>
        <div class="col-md-3">
            @Html.DisplayFor(model => model.ProductName)
        </div>
    </div>
    <br />
    <div class="form-group">
        <label class="col-md-3 control-label">Resim</label>
        <div class="col-md-3">
            <img src="~/Content/UrunResimleri/@Model.ProductResim" alt="image" height="25" width="60">
        </div>
    </div>
    <br />
    <div class="form-group">
        <div class="col-md-3">

        </div>
        <div class="col-md-3">
            <input type="submit" value="Sil" class="btn btn-warning col-md-3">
            <div class="col-md-4">
                @Html.ActionLink(" Geri Dön", "Index")
            </div>
        </div>

    </div>
}
