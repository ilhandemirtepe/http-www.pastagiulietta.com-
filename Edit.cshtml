@model PastaMVC.Models.Product
@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}
<link href="~/Content/Admin/css/bootstrap.min.css" rel="stylesheet" />
@using (Html.BeginForm("Edit", "UrunCRUD", FormMethod.Post, new { enctype = "multipart/form-data", @class = "form-horizontal", role = "form" }))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)
    @Html.HiddenFor(model => model.Productid)
    <div class="form-group">
        <label class="col-md-3 control-label"></label>
        <div class="col-md-3">
            <div class="alert alert-warning fade in">
                <a href="#" class="close" data-dismiss="alert">×</a>
                <strong>Uyarı..!</strong> Güncelleme işlemi için Ürün resmi yeniden seçiniz..
            </div>

        </div>
    </div>
    <div class="form-group">
         
        @*@Html.LabelFor(model=>model.Kategoriid,"Kategori")*@
        <label class="col-md-3 control-label">Kategori Seç</label>
        <div class="col-md-3">
            @Html.DropDownList("Kategoriid", String.Empty)
        </div>
    </div>
    <div class="form-group">
        <label class="col-md-3 control-label">Ürün Adı</label>
        <div class="col-md-3">
            @Html.EditorFor(model => model.ProductName, new { htmlAttributes = new { @class = "form-control" } })

        </div>
    </div>
    <div class="form-group">
        <label class="col-md-3 control-label">Resim</label>
        <div class="col-md-3">
            <input type="file" name="file" required="">
            <img src="~/Content/UrunResimleri/@Model.ProductResim" alt="image" height="25" width="60">

        </div>
    </div>
    <div class="form-group">
        <label class="col-md-3 control-label"></label>
        <div class="col-md-3">
            <input type="submit" name="name" class="btn btn-danger" value="Düzenle " />
        </div>
    </div>
}