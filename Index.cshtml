@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutUser.cshtml";
}
<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />

    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content="" />
    <meta name="author" content="" />
    <title>Pastagiulietta</title>
    <link rel="stylesheet" href="@Url.Content("~/Content/User1/")css/font-awesome.min.css" />
    <link href="~/Content/User1/css/bootstrap.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="@Url.Content("~/Content/User1/")css/bootstrap.min.css" />
    <link rel="stylesheet" href="@Url.Content("~/Content/User1/")css/style.css" />
    <link href='http://fonts.googleapis.com/css?family=Open+Sans:600italic,400,800,700,300' rel='stylesheet' type='text/css' />
    <link href='http://fonts.googleapis.com/css?family=BenchNine:300,400,700' rel='stylesheet' type='text/css' />
    <script src="@Url.Content("~/Content/User1/")js/modernizr.js"></script>
    <!--[if lt IE 9]>
      <script src="js/html5shiv.js"></script>
      <script src="js/respond.min.js"></script>
    <![endif]-->

    <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.12.4/jquery.min.js"></script>
    <script src="http://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>
    <style>
        #deneme {
            width: 150px;
            height: 100px;
            margin: 0 auto;
        }
    </style>

</head>
<body>
    <div class="container">
        <div class="row">
            <div class="col-xs-12">
                <div id="carouselHacked" class="carousel slide carousel-fade" data-ride="carousel">
                    <div class="header-backup"></div>
                    Wrapper for slides
                    <div class="carousel-inner" role="listbox">
                        <div class="item">
                            <img class="img-rounded pull-xs-left" src="~/Content/User1/rsz_slt2.jpg" />
                            <div class="carousel-caption">
                                <h1 style="font-size:38px;font-weight:bold">MAKARNA ENERJİ KAYNAĞIDIR...!</h1>
                                <h3>Metabolizmada çabucak parçalanır ve hemen enerjiye dönüşür...</h3>
                            </div>
                        </div>
                        <div class="item active">
                            <img class="img-rounded pull-xs-left" src="~/Content/User1/rsz_slt1.jpg" />
                            <div class="carousel-caption">
                                <h1 style="font-size:38px;font-weight:bold">MAKARNA VİTAMİN DEPOSUDUR...!</h1>
                                <h3>Makarna vitamin ve mineral bakımından çok zengindir ve yararlıdır...</h3>
                            </div>
                        </div>
                        <div class="item">
                            <img class="img-rounded pull-xs-left" src="~/Content/User1/rsz_slt3.jpg" />
                            <div class="carousel-caption">
                                <h1 style="font-size:38px;font-weight:bold">MAKARNA  SOFRAYA ÇEŞİTLİLİK GETİRİR ...!</h1>
                                <h3>Börekten salataya, ana yemekten garnitüre makarna sofralarda bin bir şekilde yer alabilir...</h3>
                            </div>
                        </div>
                        <div class="item">

                            <img class="img-rounded pull-xs-left " src="~/Content/User1/sonhal.jpg" />
                            <div class="carousel-caption" style="margin-top:5px;">
                                <h1 style="font-size:38px;font-weight:bold;">% 26 YUMURTA ORANI..!</h1>
                                <h3>İtalya'ya has savoıardı Pasta Giulietta markası ile şimdi Türkiye'de..</h3>
                            </div>
                        </div>
                        <a class="left carousel-control" href="#carouselHacked" role="button" data-slide="prev">
                            <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
                            <span class="sr-only">Previous</span>
                        </a>
                        <a class="right carousel-control" href="#carouselHacked" role="button" data-slide="next">
                            <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
                            <span class="sr-only">Next</span>
                        </a>
                    </div>
                </div>
            </div>
        </div>
        <div class="container">
            <div class="row">
                <h4 class="text-center" style="color:#5b5656;font-family:Cambria"> <b> Ürünlerimiz </b></h4>

                @foreach (var item in repo.findAll())
                {
                <div class="col-md-3">
                    <div class="person" style="margin-top:18px;">
                        <img class="img-responsive" id="deneme"
                             src="@Url.Content("~/Content/UrunResimleri/")@item.ProductResim" alt="Denem" />
                        <div class="col-md-3"></div>
                        <div class="person-detail col-md-6" style="text-align:center;color:#fff;border-radius:10px;">
                            <div class="arrow-bottom"></div>
                            @item.ProductName
                        </div>

                    </div>
                </div>
                }
            </div>


        </div>
        <footer class="footer clearfix">
            <div class="container">
                <div class="row">
                    <div class="col-xs-6 footer-para">
                        <p>
                            <img src="~/Content/User1/Capture.PNG" />

                        </p>
                    </div>
                    <div class="col-xs-6 text-right">
                        <a href="https://www.facebook.com/Pasta-Giulietta-499105733626882/about/?entry_point=page_nav_about_item&tab=overview"><i class="fa fa-facebook"></i></a>
                        <a href="https://twitter.com/PastaGuilietta"><i class="fa fa-twitter"></i></a>
                        <a href="https://www.linkedin.com/in/pasta-giulietta-719b14129"><i class="fa fa-linkedin-square"></i></a>
                    </div>
                </div>
            </div>
        </footer>
    </div>
</body>
</html>
